<div class="container">
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table table-hover">

      <% if @range == "User" %>
      <thead>
        <tr>
          <td>image</td>
          <td>Name</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><a href="<%= user_path(user.id) %>"><%= image_tag user.get_profile_image(100,100) %></a></td>
          <td><a href="<%= user_path(user.id) %>"><%= user.name %></a></td>


           <td>
             <% if user !=current_user %>
            <% if user.followed_by?(current_user) %>
            　<%= link_to user_relationship_path(user_id: user.id, id: current_user.id), method: :delete do %>
                <button type="button" class="btn btn-success">フォローを外す</button>
              <% end %>
            <% else %>
              <%= link_to user_relationships_path(user.id), method: :post do %>
              　<button type="button" class="btn btn-success">フォローする</button>
              <% end %>
            <% end %>
           <% end %>
           </td>


          <td><a href="<%= user_path(user.id) %>">Show</a></td>
        </tr>
        <% end %>
     </tbody>
      <% else %>
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Body</td>
          <td></td>
          <td></td>
        </tr>
      </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><a href="<%= user_path(book.user_id) %>"><%= image_tag book.user.get_profile_image(100,100) %><br></a></td>
          <td><a href="<%= book_path(book.id) %>"><%= book.title %></a></td>
          <td><%= book.body %></td>
          <td>
            <% if book.favorited_by?(current_user) %>
            　<%= link_to book_favorites_path(book), method: :delete do %>
              ♥<%= book.favorites.count %>いいね
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(book), method: :post do %>
              ♡<%= book.favorites.count %> いいね
              <% end %>
            <% end %>
          </td>
          <td><%= book.comments.count %>コメント</td>
        </tr>
        <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
  </div>

</div>
