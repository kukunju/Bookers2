<div class="container">
  <%= render 'users/message',book: @book %>

  <div class="row">
    <%= render 'users/user_info', user: @user, book: @book %>


  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Body</td>
        </tr>
      </thead>
     <tbody>
        <tr>
          <td><a href="<%= user_path(@user.id) %>"><%= image_tag @user.get_profile_image(100,100) %><br>
          <%= @user.name %></a></td>
          <td><a href="<%= book_path(@books.id) %>"><%= @books.title %></a></td>
          <td><%= @books.body %></td>


          <td>
            <% if @books.favorited_by?(current_user) %>
            　<%= link_to book_favorites_path(@books), method: :delete do %>
              ♥<%= @books.favorites.count %>いいね
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@books), method: :post do %>
              ♡<%= @books.favorites.count %> いいね
              <% end %>
            <% end %>
          </td>

          <% if @user == current_user %>
          <td >
            <a class="btn btn-success" href="<%= edit_book_path(@books.id) %>" role="button">
            Edit
            </a>
          </td>

          <td>
            <%= link_to book_path(@books.id), method: :delete, class: "btn btn-danger", role: "button", data: { confirm: "本当に削除しますか？" } do %>
              Destroy
            <% end %>
          </td>
          <% end %>


        </tr>
     </tbody>
    </table>

  <dir>
  <h1>Comments</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <td></td>
          <td>User Name</td>
          <td>Comment</td>
          <td></td>
        </tr>
      </thead>
     <tbody>
        <% @books.comments.each do |comment| %>
        <tr>
          <td><a href="<%= book_path(@books.id) %>"><%= image_tag comment.user.get_profile_image(50,50) %><br></a></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.comment %></td>
          <td>
            <% if comment.user == current_user %>
              <%= link_to book_comment_path(comment.book,comment), method: :delete, class: "btn btn-danger", role: "button", data: { confirm: "本当に削除しますか？" } do %>
              Destroy
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
     </tbody>
    </table>

    <h2>New comment</h2>

   <%= form_with model: [@books,@comment] do |f| %>

  <div class="form-group">
   <%= f.text_field :comment, class: "form-control" %>
   <%= f.submit "送信", class: "btn btn-success",data: { disable_with: '送信中' } %>
   <% end %>
  </div>

  </dir>

  </div>


  </div>

</div>