<div class="col-3">
    <div class="row">
    <h1 class="mx-auto">
      User info
    </h1>
    <div class="row mx-auto">
      <%= image_tag user.get_profile_image(200,200) %>
    </div>
  </div>

  <table class="table">
    <tbody>
        <tr>
        <td>name</td>
        <td><%= user.name %></td>
        </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>

  <div class="col">
    <% if @user == current_user %>
    <a class="btn btn-outline-primary mx-auto col mb-2" href= "<%= edit_user_path(user.id) %>" role="button">
      <i class="fas fa-user-cog"></i>
    </a>
    <% end %>
  </div>


  <div>
    <h2>New Book</h2>

   <%= form_with model: book, url:'/books', method: :post  do |f| %>

  <div class="form-group">
   <label for="book_title">Title</label><br>
   <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
   <label for="book_body">Body</label><br>
   <%= f.text_area :body, class: "form-control" %>
  </div>

   <button type="submit" class="btn btn-success">Create Book</button>

<% end %>
  </div>
</div>